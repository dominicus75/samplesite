<!-- Facebook Metadata -->
    <meta property="og:title" content="{{title}}">
    <meta property="og:url" content="http://{{url}}">
    <meta property="og:site_name" content="{{site_name}}">
    <meta property="og:description" content="{{description}}">
    <meta property="og:locale" content="{{locale}}">
    <meta property="og:image" content="{{image}}">
<!-- Twitter Metadata -->
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:description" content="{{description}}">
    <meta name="twitter:url" content="http://{{url}}">
    <meta name="twitter:domain" content="{{site_name}}">
    <meta name="twitter:image:src" content="{{image}}">
<!-- Google+ Metadata of WebSite -->
    <meta itemprop="name" content="{{site_name}}">
    <meta itemprop="url" content="http://{{url}}">
    <meta itemprop="fileFormat" content="text/html">
    <meta itemprop="inLanguage" content="{{locale}}">